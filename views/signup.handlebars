<main>
<!-- eyball icon import --> 
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
</head>
<body>
<div class="container mt-5">
    <h2>Sign Up</h2>
    <form class="form signup-form">
        <div class="form-group">
            <label for="email-signup">Email:</label>
            <input class="form-control" type="email" id="email-signup" required>
        </div>
        <div class="form-group">
            <label for="github-username-signup">GitHub Username:</label>
            <input class="form-control" type="text" id="github-username-signup" required>
        </div>
        <div class="form-group">
            <label for="password-signup">Password:</label>
            <div class="input-group">
                <input class="form-control" type="password" id="password-signup" required>
                <div class="input-group-append">
                    <span class="input-group-text password-toggle" onclick="togglePassword('password-signup')">
                        <i class="far fa-eye"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="confirm-password-signup">Confirm Password:</label>
            <div class="input-group">
                <input class="form-control" type="password" id="confirm-password-signup" required>
                <div class="input-group-append">
                    <span class="input-group-text password-toggle" onclick="togglePassword('confirm-password-signup')">
                        <i class="far fa-eye"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Sign Up</button>
        </div>
    </form>
    <p>Already have an account? Click <a href="/login">here</a> to log in.</p>
    <!-- signup js -->
    <script src="../public/js/signup.js"></script>
    <script>
        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>
</main>